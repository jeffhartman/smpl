{% extends "@smpl_theme/components/card/card.html.twig" %}

{% set card_classes = [
  'col-sm-6',
  'col-md-4',
  'col-llg-3',
] %}


{% set classes = [
  'node',
  node.bundle|clean_class,
  'h-100',
  'shadow-sm'
] %}

{% set card_primary_cta_url = path('entity.node.canonical', {'node': node.id}) %}
{% set card_primary_cta_text = 'View Ship'|t %}

{% block card_image %}
  {{ node.field_hero_image.entity.field_media_image|view('card') }}
{% endblock %}

{% block card_title %}
  {{ label }}
{% endblock %}

{% block card_text %}
  {{ content.body }}
{% endblock %}
